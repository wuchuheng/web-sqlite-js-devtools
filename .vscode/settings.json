{
  "editor.formatOnSave": true,
  // auto fix eslint errors on save
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],

  "workbench.editorAssociations": {
    "*.md": "default"
  }
}
